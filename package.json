{
    "name": "sortier-vscode",
    "displayName": "Sortier",
    "description": "Visual Studio Code extension for Sortier",
    "version": "2.0.0",
    "publisher": "Snowcoders",
    "engines": {
        "vscode": "^1.18.0"
    },
    "bugs": {
        "url": "https://github.com/snowcoders/sortier-vscode/issues"
    },
    "homepage": "https://github.com/snowcoders/sortier-vscode",
    "repository": {
        "type": "git",
        "url": "https://github.com/snowcoders/sortier-vscode.git"
    },
    "categories": [
        "Formatters"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.sortier",
                "title": "Sortier"
            }
        ],
        "configuration": [
            {
                "title": "Sortier",
                "properties": {
                    "sortier.onSave": {
                        "type": "boolean",
                        "default": false,
                        "description": "Runs sortier on save"
                    }
                }
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "mocha": "^4.0.1",
        "chai": "^4.1.2",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.44",
        "@types/chai": "^4.0.10"
    },
    "dependencies": {
        "@snowcoders/sortier": "^2.1.3",
        "cosmiconfig": "^5.0.1",
        "ts-node": "^4.0.1"
    }
}